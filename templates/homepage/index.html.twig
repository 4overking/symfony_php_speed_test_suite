{% extends 'base.html.twig' %}

{% block title %}Tasks list{% endblock %}

{% block body %}
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <h5 class="my-0 mr-md-auto font-weight-normal">PHP Speed Test ({{ "now"|date("m/d/Y h:i:s.u") }})</h5>
        <nav class="my-2 my-md-0 mr-md-3">
        </nav>
        <a class="btn btn-outline-primary" href="#">Sign up</a>
    </div>
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Tasks list</h1>
        <p class="lead">This demo is the simple demonstration of page with data from DB</p>
    </div>
    <div class="container">
        <div class="card-deck mb-3 text-center">
            <div class="card mb-12 shadow-sm">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Project Name</th>
                        <th scope="col">Executor</th>
                        <th scope="col">Start</th>
                        <th scope="col">Finish</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set counter = 0 %}
                    {% for project in projects %}
                        {% for task in project.tasks %}
                            {% set counter = counter + 1 %}
                            {% set executor = task.executor %}
                            <tr>
                                <th scope="row">{{ counter }}</th>
                                <td>{{ project.name }}</td>
                                <td>{{ executor.firstName }} {{ executor.lastName }}</td>
                                <td>{{ task.start|date }}</td>
                                <td>{{ task.finish|date }}</td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
